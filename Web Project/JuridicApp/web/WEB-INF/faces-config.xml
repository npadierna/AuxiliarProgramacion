<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.1"
              xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd" >

    <application>
        <locale-config>
            <default-locale>en_US</default-locale>
        </locale-config>
    </application>
    <application>
        <el-resolver>
            org.springframework.web.jsf.el.SpringBeanFacesELResolver
        </el-resolver>
    </application>
    <lifecycle>
        <phase-listener>
            co.edu.udea.juridicapp.security.authorization.AuthorizationListener
        </phase-listener>
    </lifecycle>
    <managed-bean>
        <managed-bean-name>adminCreatorEntityBean</managed-bean-name>
        <managed-bean-class>
            co.edu.udea.juridicapp.web.bean.admin.creator.AdminCreatorEntityBean
        </managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>loginClientBean</managed-bean-name>
        <managed-bean-class>
            co.edu.udea.juridicapp.web.bean.client.login.LoginClientBean
        </managed-bean-class>
        <managed-bean-scope>scope</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>registrationClientBean</managed-bean-name>
        <managed-bean-class>
            co.edu.udea.juridicapp.web.bean.client.registration.RegistrationClientBean
        </managed-bean-class>
        <managed-bean-scope>scope</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>updateClientBean</managed-bean-name>
        <managed-bean-class>
            co.edu.udea.juridicapp.web.bean.client.update.UpdateClientBean
        </managed-bean-class>
        <managed-bean-scope>scope</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>oeuvreListBean</managed-bean-name>
        <managed-bean-class>
            co.edu.udea.juridicapp.web.bean.oeuvre.OeuvreListBean
        </managed-bean-class>
        <managed-bean-scope>scope</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>oeuvreSelectorBean</managed-bean-name>
        <managed-bean-class>
            co.edu.udea.juridicapp.web.bean.oeuvre.OeuvreSelectorBean
        </managed-bean-class>
        <managed-bean-scope>scope</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>creatorOeuvreBean</managed-bean-name>
        <managed-bean-class>
            co.edu.udea.juridicapp.web.bean.oeuvre.create.CreatorOeuvreBean
        </managed-bean-class>
        <managed-bean-scope>scope</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>dependencyBean</managed-bean-name>
        <managed-bean-class>
            co.edu.udea.juridicapp.web.bean.dependency.DependencyBean
        </managed-bean-class>
        <managed-bean-scope>scope</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>profileBean</managed-bean-name>
        <managed-bean-class>
            co.edu.udea.juridicapp.web.bean.profile.ProfileBean
        </managed-bean-class>
        <managed-bean-scope>scope</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>titleBean</managed-bean-name>
        <managed-bean-class>
            co.edu.udea.juridicapp.web.bean.title.TitleBean
        </managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>supportBean</managed-bean-name>
        <managed-bean-class>
            co.edu.udea.juridicapp.web.bean.support.SupportBean
        </managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>typeBean</managed-bean-name>
        <managed-bean-class>
            co.edu.udea.juridicapp.web.bean.type.TypeBean
        </managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>

    <!-- Tester -->
    <managed-bean>
        <managed-bean-name>authorFinderTesterBean</managed-bean-name>
        <managed-bean-class>
            co.edu.udea.juridicapp.web.bean.tester.AuthorFinderTesterBean
        </managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
</faces-config>
