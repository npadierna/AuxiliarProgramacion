<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.5.xsd" >

    <context:annotation-config />
    <context:component-scan base-package="co.edu.udea.juridicapp.persistence.dao" />
    <context:component-scan base-package="co.edu.udea.juridicapp.persistence.entity" />
    <context:component-scan base-package="co.edu.udea.juridicapp.web" />

    <tx:annotation-driven />

    <jee:jndi-lookup id="dataSource" jndi-name="jndi/juridicapp" ></jee:jndi-lookup>

    <bean id="entityManagerFactory"
          class="org.springframework.orm.jpa.LocalContainerEntityManagerFactoryBean" >
        <property name="persistenceUnitName" value="JuridicAppPU" ></property>
    </bean>

    <bean id="transactionManager"
          class="org.springframework.transaction.jta.JtaTransactionManager" >
    </bean>

    <bean id="persistenceAnnotation"
          class="org.springframework.orm.jpa.support.PersistenceAnnotationBeanPostProcessor" >
    </bean>
</beans>